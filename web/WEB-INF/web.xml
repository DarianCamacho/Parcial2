<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>deleteProductServlet</servlet-name>
        <servlet-class>pck.products.deleteProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProductsServlet</servlet-name>
        <servlet-class>pck.products.getProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertProductServlet</servlet-name>
        <servlet-class>pck.products.insertProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadProductServlet</servlet-name>
        <servlet-class>pck.products.loadProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProductServlet</servlet-name>
        <servlet-class>pck.products.updateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductServlet</servlet-name>
        <url-pattern>/deleteProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProductsServlet</servlet-name>
        <url-pattern>/getProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertProductServlet</servlet-name>
        <url-pattern>/insertProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadProductServlet</servlet-name>
        <url-pattern>/loadProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProductServlet</servlet-name>
        <url-pattern>/updateProductServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
